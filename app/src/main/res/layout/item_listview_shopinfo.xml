<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_menuname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음식이름"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF333333"/>

    <TextView
        android:id="@+id/tv_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_menuname"
        android:layout_marginLeft="8dp"
        android:text="(남은갯수 : 10개)"
        android:textSize="14sp"
        android:layout_alignBottom="@id/tv_menuname"
        android:textColor="#FF333333"/>

    <TextView
        android:id="@+id/tv_beforeprice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="20,000원  (1인분 기준)"
        android:textSize="16sp"
        android:textColor="#FF333333"
        android:layout_below="@id/tv_menuname"
        android:layout_marginTop="4dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_dc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="30% ↓"
        android:layout_below="@id/tv_beforeprice"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/tv_afterprice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="14,000원  (1인분 기준)"
        android:textSize="16sp"
        android:textColor="#FF333333"
        android:layout_below="@id/tv_dc"
        android:layout_marginTop="4dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/iv_menuinfo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:src="@drawable/ic_baseline_local_pizza_24"
        android:background="@drawable/roundshape_receipt"
        android:scaleType="centerCrop"
        android:layout_marginTop="4dp"
        app:tint="@color/black" />

</RelativeLayout>