<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seongbinsoft.pickupasap">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PickUpAsap"
        android:usesCleartextTraffic="true">
        <activity android:name=".ShopMenuActivity"
            android:theme="@style/LaunchActivityTheme"></activity>
        <activity
            android:name=".ShopInfoActivity"
            android:theme="@style/LaunchActivityTheme" />
        <activity
            android:name=".ShopListActivity"
            android:theme="@style/LaunchActivityTheme" />
        <activity
            android:name=".LoginAccountActivity"
            android:theme="@style/LaunchActivityTheme" />
        <activity
            android:name=".Login_Fragment"
            android:theme="@style/LaunchActivityTheme" />
        <activity
            android:name=".Receipt_Fragment"
            android:theme="@style/LaunchActivityTheme" />
        <activity
            android:name=".Home_Fragment"
            android:theme="@style/LaunchActivityTheme" />
        <activity
            android:name=".LaunchActivity"
            android:theme="@style/LaunchActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/LaunchActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Redirect URI: "kakao{NATIVE_APP_KEY}://oauth" -->
                <data android:host="oauth"
                    android:scheme="1b0ee869d103812d18383c935416527e" />
            </intent-filter>
        </activity>
    </application>

</manifest>